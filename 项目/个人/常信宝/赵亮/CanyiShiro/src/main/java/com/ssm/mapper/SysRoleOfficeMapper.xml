<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.mapper.SysRoleOfficeMapper" >

    <resultMap id="BaseResultMap" type="com.ssm.entiy.SysRoleOfficeKey" >
        <id column="role_id" property="roleId" jdbcType="INTEGER" />
        <id column="office_id" property="officeId" jdbcType="INTEGER" />
    </resultMap>

    <delete id="deleteByPrimaryKey" parameterType="com.ssm.entiy.SysRoleOfficeKey" >
        delete from sys_role_office
        where role_id = #{roleId,jdbcType=INTEGER}
          and office_id = #{officeId,jdbcType=INTEGER}
    </delete>

    <insert id="insert" parameterType="com.ssm.entiy.SysRoleOfficeKey" >
        insert into sys_role_office (role_id, office_id)
        values (#{roleId,jdbcType=INTEGER}, #{officeId,jdbcType=INTEGER})
    </insert>

    <insert id="insertSelective" parameterType="com.ssm.entiy.SysRoleOfficeKey" >
        insert into sys_role_office
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="roleId != null" >
                role_id,
            </if>
            <if test="officeId != null" >
                office_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="roleId != null" >
                #{roleId,jdbcType=INTEGER},
            </if>
            <if test="officeId != null" >
                #{officeId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    
    
    
    <!-- List<Integer> getRoleList(Integer id); -->
    <select id="getRoleList" resultType="java.lang.Integer">
    		select * from sys_role_office where office_id=#{id}
    </select>
    
    
    <!-- SysRoleOfficeKey getRoleOfficeOffice(@Param("id") Integer officeId); -->
    
    <select id="getRoleOfficeOffice" resultMap="BaseResultMap">
    		select * from sys_role_office where office_id=#{id}
    </select>
</mapper>